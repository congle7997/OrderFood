<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenButton">

    <ImageView
        android:id="@+id/imgHinhNhanVien"
        android:layout_margin="@dimen/size10dp"
        android:src="@drawable/nhanvien"
        android:layout_width="@dimen/size80dp"
        android:layout_height="@dimen/size80dp" />

    <TextView
        android:id="@+id/txtTenNhanVien"
        android:text="Tên nhân viên"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_toRightOf="@+id/imgHinhNhanVien"
        android:textStyle="bold"
        android:textColor="@color/colorOrganButton"
        android:textSize="@dimen/size18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCMND"
        android:text="123456789"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_toRightOf="@+id/imgHinhNhanVien"
        android:layout_below="@id/txtTenNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>